{
    "extends": ["stylelint-config-standard"],
    "rules": {
        "custom-property-pattern": ["^atui(?:Kernel|Mediasplayer|Searchservices)_.*", { "severity": "warning" }],
        "selector-id-pattern": ["^atui(?:Kernel|Mediasplayer|Searchservices)_.*", { "severity": "warning" }],
        "selector-class-pattern": [
            "^(?:(atui(?:Kernel|Mediasplayer|Searchservices)_|option).*|ti)$",
            { "severity": "warning" }
        ],
        "no-descending-specificity": null
    },
    "overrides": [
        {
            "files": ["./patch/**"],
            "rules": {
                "selector-class-pattern": null,
                "selector-id-pattern": null
            }
        }
    ]
}
