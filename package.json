{
    "name": "@alcapitan/atui",
    "version": "0.4.1",
    "description": "Front-end library to build your website easier.",
    "scripts": {
        "babel": "babel atui/kernel/src/main.js --out-dir atui/kernel/dist/ & babel atui/MediasPlayer/src/main.js --out-dir atui/MediasPlayer/dist/ & babel atui/SearchService/src/main.js --out-dir atui/SearchService/dist/",
        "cspell": "cspell lint ** --cache --show-context",
        "cspell:check": "cspell lint ** --show-context",
        "eslint": "eslint . --cache --fix",
        "eslint:check": "eslint .",
        "htmlhint": "htmlhint",
        "postcss": "postcss atui/kernel/src/main.css --dir atui/kernel/dist/ & postcss atui/MediasPlayer/src/main.css --dir atui/MediasPlayer/dist/ & postcss atui/SearchService/src/main.css --dir atui/SearchService/dist/",
        "prettier": "prettier -w ** --cache",
        "prettier:check": "prettier -c **",
        "stylelint": "stylelint **.css --cache --fix",
        "stylelint:check": "stylelint **.css",
        "check": "npm-run-all -p cspell:check htmlhint prettier:check stylelint:check eslint:check",
        "build:css": "npm-run-all -s stylelint postcss",
        "build:js": "npm-run-all -s eslint babel",
        "build": "npm-run-all -p cspell htmlhint -s prettier -p build:css build:js",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alcapitan/atui.git"
    },
    "keywords": [
        "lightweight",
        "website",
        "front-end",
        "library",
        "web",
        "easy-to-use"
    ],
    "author": "Al Capitan",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/alcapitan/atui/issues"
    },
    "homepage": "https://github.com/alcapitan/atui#readme",
    "devDependencies": {
        "@babel/cli": "^7.22.9",
        "@babel/core": "^7.22.9",
        "@babel/preset-env": "^7.22.9",
        "@commitlint/cli": "^17.6.6",
        "@commitlint/config-conventional": "^17.6.6",
        "@commitlint/cz-commitlint": "^17.5.0",
        "@cspell/dict-fr-fr": "^2.2.1",
        "autoprefixer": "^10.4.14",
        "babel-preset-minify": "^0.5.2",
        "commitizen": "^4.3.0",
        "cspell": "^6.31.1",
        "cssnano": "^6.0.1",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^16.0.1",
        "eslint-plugin-promise": "^6.1.1",
        "htmlhint": "^1.1.4",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.26",
        "postcss-cli": "^10.1.0",
        "postcss-import": "^15.1.0",
        "postcss-preset-env": "^9.0.0",
        "prettier": "^3.0.0",
        "stylelint": "^15.10.1",
        "stylelint-config-standard": "^34.0.0",
        "husky": "^8.0.0"
    },
    "optionalDependencies": {
        "@tabler/icons-webfont": "^2.25.0",
        "http-server": "^14.1.1"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    }
}
