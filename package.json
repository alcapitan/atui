{
    "name": "@alcapitan/atui",
    "version": "0.4.1",
    "description": "Front-end library to build your website easier.",
    "main": "index.html",
    "scripts": {
        "babel:vk": "babel atui/kernel/src/*.js --out-dir atui/kernel/dist/ -s",
        "babel:mp": "babel atui/MediasPlayer/src/*.js --out-dir atui/MediasPlayer/dist/ -s",
        "babel:ss": "babel atui/SearchService/src/*.js --out-dir atui/SearchService/dist/ -s",
        "cspell": "cspell lint ** --cache --show-context",
        "esbuild:vk": "esbuild --minify --sourcemap --keep-names --tree-shaking=false dist=atui/kernel/dist/main.css dist=atui/kernel/dist/main.js --outdir=atui/kernel/dist/",
        "esbuild:mp": "esbuild --minify --sourcemap --keep-names --tree-shaking=false dist=atui/MediasPlayer/dist/main.css dist=atui/MediasPlayer/dist/main.js --outdir=atui/MediasPlayer/dist/",
        "esbuild:ss": "esbuild --minify --sourcemap --keep-names --tree-shaking=false dist=atui/SearchService/dist/main.css dist=atui/SearchService/dist/main.js --outdir=atui/SearchService/dist/",
        "eslint:vk": "eslint atui/kernel/src/*.js --cache --fix",
        "eslint:mp": "eslint atui/MediasPlayer/src/*.js --cache --fix",
        "eslint:ss": "eslint atui/SearchService/src/*.js --cache --fix",
        "eslint:check:vk": "eslint atui/kernel/src/*.js --cache",
        "eslint:check:mp": "eslint atui/MediasPlayer/src/*.js --cache",
        "eslint:check:ss": "eslint atui/SearchService/src/*.js --cache",
        "postcss:vk": "postcss atui/kernel/src/*.css -d atui/kernel/dist/ -m",
        "postcss:mp": "postcss atui/MediasPlayer/src/*.css -d atui/MediasPlayer/dist/ -m",
        "postcss:ss": "postcss atui/SearchService/src/*.css -d atui/SearchService/dist/ -m",
        "prettier": "prettier -w ** --cache",
        "prettier:check": "prettier -c **",
        "stylelint": "stylelint **.css --cache --fix",
        "stylelint:check": "stylelint **.css --cache",
        "htmlhint": "htmlhint **/*.html",
        "commitlint": "commitlint",
        "commit": "commit",
        "check": "npm-run-all cspell prettier:check stylelint:check eslint:check:*",
        "build": "npm-run-all cspell prettier stylelint eslint:* postcss:* babel:* esbuild:*"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alcapitan/atui.git"
    },
    "keywords": [
        "lightweight",
        "website",
        "front-end",
        "library",
        "web",
        "easy-to-use"
    ],
    "author": "Al Capitan",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/alcapitan/atui/issues"
    },
    "homepage": "https://github.com/alcapitan/atui#readme",
    "devDependencies": {
        "@babel/cli": "^7.22.6",
        "@babel/core": "^7.22.6",
        "@babel/eslint-parser": "^7.22.6",
        "@babel/preset-env": "^7.22.6",
        "@commitlint/cli": "^17.6.6",
        "@commitlint/config-conventional": "^17.6.6",
        "@commitlint/prompt-cli": "^17.6.6",
        "@cspell/dict-fr-fr": "^2.2.1",
        "autoprefixer": "^10.4.14",
        "cspell": "^6.31.1",
        "esbuild": "^0.18.11",
        "eslint": "^8.44.0",
        "eslint-config-prettier": "^8.8.0",
        "htmlhint": "^1.1.4",
        "husky": "^8.0.3",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.24",
        "postcss-cli": "^10.1.0",
        "postcss-discard-comments": "^6.0.0",
        "postcss-import": "^15.1.0",
        "postcss-preset-env": "^9.0.0",
        "prettier": "^2.8.8",
        "stylelint": "^15.10.0",
        "stylelint-config-standard": "^34.0.0"
    },
    "dependencies": {
        "@tabler/icons-webfont": "^2.23.0",
        "http-server": "^14.1.1"
    },
    "browserslist": [
        "defaults"
    ],
    "engines": {
        "node": ">=12.16"
    }
}
